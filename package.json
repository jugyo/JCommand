{
    "name": "jcommand",
    "displayName": "JCommand",
    "description": "VSCode Extension to run and manage shell commands",
    "version": "0.0.1",
    "publisher": "jugyo",
    "engines": {
        "vscode": "^1.28.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.jcommand.edit",
        "onCommand:extension.jcommand.run"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.jcommand.edit",
                "title": "JCommand: Edit"
            },
            {
                "command": "extension.jcommand.run",
                "title": "JCommand: Run"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "@types/fs-extra": "^5.0.4",
        "fs-extra": "^7.0.0"
    }
}
